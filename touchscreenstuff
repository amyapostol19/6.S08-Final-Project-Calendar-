#include <Adafruit_GFX.h>    // Core graphics library
#include <SPI.h>
#include <Wire.h>      // this is needed even tho we aren't using it
#include <Adafruit_ILI9341.h>
#include <Adafruit_STMPE610.h>
#include "Adafruit_ILI9341.h" // Hardware-specific library
#include <SD.h>

// This is calibration data for the raw touch data to the screen coordinates
#define TS_MINX 150
#define TS_MINY 130
#define TS_MAXX 3800
#define TS_MAXY 4000

// The STMPE610 uses hardware SPI on the shield, and #8
#define STMPE_CS 8
Adafruit_STMPE610 ts = Adafruit_STMPE610(STMPE_CS);

// TFT display and SD card will share the hardware SPI interface.
// Hardware SPI pins are specific to the Arduino board type and
// cannot be remapped to alternate pins.  For Arduino Uno,
// Duemilanove, etc., pin 11 = MOSI, pin 12 = MISO, pin 13 = SCK.

// The display also uses hardware SPI, plus #9 & #10
#define TFT_CS 10
#define TFT_DC 9
Adafruit_ILI9341 tft = Adafruit_ILI9341(TFT_CS, TFT_DC);

#define SD_CS 4

// Size of the color selection boxes and the paintbrush size
#define BOXSIZE 40
#define PENRADIUS 3
int oldcolor, currentcolor;
String event_name;
String old_event = "";
String name_of_event = "";
int event_time = 0;
String event_location = "";
long first_time;
long end_time;



void setup() {
  // while(!Serial); //used for debugging

  Serial.begin(9600);
  delay(500);
  Serial.println(F("Touchscreen!"));

  tft.begin();

  if (!ts.begin()){
    Serial.println("Couldn't start touchscreen controller");
    while (1);
  }
  Serial.println("Touchscreen started");
  delay(500);

  tft.fillScreen(ILI9341_BLUE);

  yield();

  Serial.print("Initializing SD card...");
  if (!SD.begin(SD_CS)){
    Serial.println("failed!");
  }
  Serial.println("OK!");

  //draws keyboard picture
  bmpDraw("keyfour.bmp", 0, 0);
  tft.fillRect(0, 0, 28, 90, ILI9341_RED);
  Serial.println("Rectangle drawn");


  tft.setRotation(1);

  tft.fillRect(268, 0, 55, 25, ILI9341_BLACK);
  tft.drawRect(268, 0, 55, 25, ILI9341_WHITE);
  tft.fillRect(268, 75, 55, 25, ILI9341_BLACK);
  tft.drawRect(268, 75, 55, 25, ILI9341_WHITE);
  tft.fillRect(268, 50, 55, 25, ILI9341_BLACK);
  tft.drawRect(268, 50, 55, 25, ILI9341_WHITE);
  tft.fillRect(268, 25, 55, 25, ILI9341_BLACK);
  tft.drawRect(268, 25, 55, 25, ILI9341_WHITE);
  
  tft.setCursor(10, 222);
  tft.setTextSize(1);
  tft.setTextColor(ILI9341_WHITE);
  tft.println("Record Event");
  tft.setCursor(275, 5);
  tft.println("Display");
  tft.setCursor(275, 15);
  tft.println("Mode");
  tft.setCursor(275, 37);
  tft.println("Name");
  tft.setCursor(275, 62);
  tft.println("Date");
  tft.setCursor(270, 87);
  tft.println("Location");
  tft.setCursor(0,0);
  tft.setTextSize(2);
  tft.println("Touch 'Name' to start");
}



void loop() {
  // See if there's any  touch data for us
  if (ts.bufferEmpty() || millis()-first_time < 500) {
    while(!ts.bufferEmpty()){
      ts.getPoint();
    }
    return;
  }
  /*
  // You can also wait for a touch
  if (! ts.touched()) {
    return;
  }
  */

  // Retrieve a point
  TS_Point p = ts.getPoint();
  first_time = millis();
  while(!ts.bufferEmpty()){
    ts.getPoint();
  }

  //prints location of the point to the serial monitor, not scaled
  /*
  Serial.print("X = "); Serial.print(p.x);
  Serial.print("\tY = "); Serial.print(p.y);
  Serial.print("\tPressure = "); Serial.println(p.z);  
 */

  // Scale from ~0->4000 to tft.width using the calibration #'s
  p.x = map(p.x, TS_MINX, TS_MAXX, 0, tft.width());
  p.y = map(p.y, TS_MINY, TS_MAXY, 0, tft.height());

  //prints location of the point touched to serial monitor (scaled)
  Serial.print("("); Serial.print(p.x);
  Serial.print(", "); Serial.print(p.y);
  Serial.println(")");
  Serial.println(first_time);

  //print letters to the Serial monitor
  if (p.x > 155 && p.x < 190 && p.y < 23){
    event_name += "1";
    dispCurrentLetters(); 
  }
  else if (p.x > 155 && p.x < 190 && p.y >= 23 && p.y < 40){
    event_name += "2";
    dispCurrentLetters(); 
  }
  else if (p.x > 155 && p.x < 190 && p.y >= 40 && p.y < 57){
    event_name += "3";
    dispCurrentLetters();
  }
  else if (p.x > 155 && p.x < 190 && p.y >= 57 && p.y < 77){
    event_name += "4";
    dispCurrentLetters();
  }
  else if (p.x > 155 && p.x < 190 && p.y >= 77 && p.y < 97){
    event_name += "5";
    dispCurrentLetters();
  }
  else if (p.x > 155 && p.x < 190 && p.y >= 97 && p.y < 123){
    event_name += "6";
    dispCurrentLetters();
  }
  else if (p.x > 155 && p.x < 190 && p.y >= 123 && p.y < 145){
    event_name += "7";
    dispCurrentLetters();
  }
  else if (p.x > 155 && p.x < 190 && p.y >= 145 && p.y < 165){
    event_name += "8";
    dispCurrentLetters();
  }
  else if (p.x > 155 && p.x < 190 && p.y >= 165 && p.y < 187){
    event_name += "9";
    dispCurrentLetters();
  }
  else if (p.x > 155 && p.x < 190 && p.y >= 187 && p.y < 205){
    event_name += "0";
    dispCurrentLetters();
  }
  else if (p.x > 125 && p.x < 155 && p.y < 23){
    event_name += "a";
    dispCurrentLetters();
  }
  else if (p.x > 125 && p.x < 155 && p.y >= 23 && p.y < 40){
    event_name += "b";
    dispCurrentLetters();
  }
  else if (p.x > 125 && p.x < 155 && p.y >= 40 && p.y < 57){
    event_name += "c";
    dispCurrentLetters();
  }
  else if (p.x > 125 && p.x < 155 && p.y >= 57 && p.y < 77){
    event_name += "d";
    dispCurrentLetters();
  }
  else if (p.x > 125 && p.x < 155 && p.y >= 77 && p.y < 97){
    event_name += "e";
    dispCurrentLetters();
  }
  else if (p.x > 125 && p.x < 155 && p.y >= 97 && p.y < 123){
    event_name += "f";
    dispCurrentLetters();
  }
  else if (p.x > 125 && p.x < 155 && p.y >= 123 && p.y < 145){
    event_name += "g";
    dispCurrentLetters();
  }
  else if (p.x > 125 && p.x < 155 && p.y >= 145 && p.y < 165){
    event_name += "h";
    dispCurrentLetters();
  }
  else if (p.x > 125 && p.x < 155 && p.y >= 165 && p.y < 187){
    event_name += "i";
    dispCurrentLetters();
  }
  else if (p.x > 125 && p.x < 155 && p.y >= 187 && p.y < 205){
    event_name += "j";
    dispCurrentLetters();
  }
  else if (p.x > 125 && p.x < 155 && p.y >= 205){
    event_name += "k";
    dispCurrentLetters();
  }
  else if (p.x > 85 && p.x < 125 && p.y < 23){
    event_name += "l";
    dispCurrentLetters();
  }
  else if (p.x > 85 && p.x < 125 && p.y >= 23 && p.y < 40){
    event_name += "m";
    dispCurrentLetters();
  }
  else if (p.x > 85 && p.x < 125 && p.y >= 40 && p.y < 57){
    event_name += "n";
    dispCurrentLetters();
  }
  else if (p.x > 85 && p.x < 125 && p.y >= 57 && p.y < 77){
    event_name += "o";
    dispCurrentLetters();
  }
  else if (p.x > 85 && p.x < 125 && p.y >= 77 && p.y < 97){
    event_name += "p";
    dispCurrentLetters();
  }
  else if (p.x > 85 && p.x < 125 && p.y >= 97 && p.y < 123){
    event_name += "q";
    dispCurrentLetters();
  }
  else if (p.x > 85 && p.x < 125 && p.y >= 123 && p.y < 145){
    event_name += "r";
    dispCurrentLetters();
  }
  else if (p.x > 85 && p.x < 125 && p.y >= 145 && p.y < 165){
    event_name += "s";
    dispCurrentLetters();
  }
  else if (p.x > 85 && p.x < 125 && p.y >= 165 && p.y < 187){
    event_name += "t";
    dispCurrentLetters();
  }
  else if (p.x > 85 && p.x < 125 && p.y >= 187 && p.y < 205){
    event_name += "u";
    dispCurrentLetters();
  }
  else if (p.x > 85 && p.x < 125 && p.y >= 205){
    event_name += "v";
    dispCurrentLetters();
  }
  else if (p.x > 50 && p.x < 85 && p.y < 23){
    event_name += "w";
    dispCurrentLetters();
  }
  else if (p.x > 50 && p.x < 85 && p.y >= 23 && p.y < 40){
    event_name += "x";
    dispCurrentLetters();
  }
  else if (p.x > 50 && p.x < 85 && p.y >= 40 && p.y < 57){
    event_name += "y";
    dispCurrentLetters();
  }
  else if (p.x > 50 && p.x < 85 && p.y >= 57 && p.y < 77){
    event_name += "z";
    dispCurrentLetters();
  }
  else if (p.x < 50 && p.y >= 65 && p.y < 160){
    event_name += " ";
    dispCurrentLetters();
  }
  else if (p.x < 50 && p.y >= 160){
    if (event_name != ""){
    event_name = event_name.substring(0, event_name.length()-1);
    }
    dispCurrentLetters();
  }
  else if (p.x > 50 && p.x < 85 && p.y >= 123 && p.y < 145){
    event_name += "/";
    dispCurrentLetters();
  }

  if (p.x > 265 && p.x < 290 && p.y > 190 && p.y < 245){
    displayClearer("Touch 'Name' to start");
    tft.fillRect(268, 25, 55, 25, ILI9341_GREEN);
    tft.setTextSize(1);
    tft.setCursor(275, 37);
    tft.println("Name");
  }
    
  if (p.x > 230 && p.x < 265 && p.y > 190 && p.y < 245){
      tft.fillRect(268, 25, 55, 25, ILI9341_BLACK);
